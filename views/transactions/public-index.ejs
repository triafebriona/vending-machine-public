<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Records | Vending Machine</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <style>
        body {
            background: linear-gradient(135deg, #1f0b4d 0%, #4b2ccf 40%, #7f5af0 100%);
            min-height: 100vh;
            padding: 30px 20px;
            font-family: 'League Spartan', sans-serif;
        }
        .public-container {
            max-width: 1400px;
            margin: 0 auto;
        }
        .header-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 25px 30px;
            margin-bottom: 25px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .header-title {
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 5px;
        }
        .header-subtitle {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1rem;
        }
        .machine-hash {
            font-family: monospace;
            font-size: 0.8rem;
            color: rgba(255,255,255,0.7);
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            color: rgba(255,255,255,0.6);
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="public-container">

        <!-- HEADER -->
        <div class="header-card">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h1 class="header-title">
                        <i class="bi bi-receipt"></i> TRANSACTION RECORDS
                    </h1>
                    <p class="header-subtitle">
                        Vending Machine Blockchain Transactions 
                        <span class="badge bg-primary bg-opacity-75 ms-2">PUBLIC VIEW</span>
                    </p>
                </div>
                <div class="mt-2 mt-sm-0">
                    <span class="badge bg-success p-3">
                        <i class="bi bi-shield-check"></i> 
                        Blockchain Verified
                    </span>
                </div>
            </div>
        </div>

        <!-- FILTER -->
        <div class="glass-card p-4 mb-4">
            <form method="GET" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label text-white fw-semibold">
                        <i class="bi bi-funnel"></i> FILTER BY MACHINE
                    </label>
                    <select class="form-select" name="machineId">
                        <option value="">ALL MACHINES</option>
                        <option value="VM001" <%= machineId === 'VM001' ? 'selected' : '' %>>VM001 - PPNS</option>
                        <option value="VM002" <%= machineId === 'VM002' ? 'selected' : '' %>>VM002 - PENS</option>
                        <option value="VM003" <%= machineId === 'VM003' ? 'selected' : '' %>>VM003 - ITS</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label text-white fw-semibold">ITEMS</label>
                    <select class="form-select" name="limit">
                        <option value="10" <%= pagination.limit === 10 ? 'selected' : '' %>>10</option>
                        <option value="25" <%= pagination.limit === 25 ? 'selected' : '' %>>25</option>
                        <option value="50" <%= pagination.limit === 50 ? 'selected' : '' %>>50</option>
                    </select>
                </div>

                <div class="col-md-5 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel"></i> APPLY FILTER
                    </button>
                    <a href="/transactions" class="btn btn-outline-light">
                        <i class="bi bi-x-circle"></i> CLEAR
                    </a>
                </div>
            </form>
        </div>

        <!-- TRANSACTIONS TABLE -->
        <div class="glass-card p-4">
            <div class="table-responsive">
                <table class="table table-glass align-middle">
                    <thead>
                        <tr>
                            <th>MACHINE ID</th>
                            <th>MACHINE HASH</th>
                            <th>TYPE</th>
                            <th>SLOT</th>
                            <th>PRODUCT</th>
                            <th>PRICE</th>
                            <th>STOCK</th>
                            <th>TIMESTAMP</th>
                            <th>STATUS</th>
                            <th>TX HASH</th>
                            <th>DATA HASH</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transactions.length === 0) { %>
                            <tr>
                                <td colspan="11" class="text-center text-white-50 py-5">
                                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                    <p class="mt-3 fs-5">NO TRANSACTIONS FOUND</p>
                                </td>
                            </tr>
                        <% } %>

                        <% transactions.forEach(tx => { %>
                        <tr>
                            <td><strong><%= tx.machineId %></strong></td>
                            <td class="machine-hash">
                                <%= tx.machineHash.substring(0, 10) %>...
                            </td>
                            <td>
                                <span class="badge bg-<%= 
                                    tx.transactionType === 'PURCHASE' ? 'info' : 'warning'
                                %>">
                                    <%= tx.transactionType %>
                                </span>
                            </td>
                            <td><%= tx.slotId %></td>
                            <td><%= tx.productName %></td>
                            <td>Rp <%= tx.price.toLocaleString() %></td>
                            <td><%= tx.stockAfter %></td>
                            <td><%= new Date(tx.timestamp).toLocaleString('id-ID') %></td>
                            <td>
                                <span class="badge bg-<%= 
                                    tx.blockchainStatus === 'CONFIRMED' ? 'success' :
                                    tx.blockchainStatus === 'PENDING' ? 'warning' : 'danger'
                                %>">
                                    <%= tx.blockchainStatus %>
                                </span>
                            </td>
                            <td>
                                <% if (tx.explorer.url) { %>
                                    <a href="<%= tx.explorer.url %>" target="_blank" class="text-white text-decoration-none">
                                        <%= tx.explorer.shortHash %>
                                        <i class="bi bi-box-arrow-up-right ms-1"></i>
                                    </a>
                                <% } else { %>
                                    <span class="text-white-50">
                                        <%= tx.explorer.displayText %>
                                    </span>
                                <% } %>
                            </td>
                            <td>
                                <code class="text-white"><%= tx.dataHash.substring(0, 10) %>...</code>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- PAGINATION -->
            <% if (pagination.pages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <% for (let i = 1; i <= pagination.pages; i++) { %>
                    <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                        <a class="page-link"
                           href="?page=<%= i %>&limit=<%= pagination.limit %><%= machineId ? '&machineId=' + machineId : '' %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
                </ul>
            </nav>
            <% } %>

            <!-- SUMMARY -->
            <div class="mt-4 text-white-50 text-center small">
                <i class="bi bi-database"></i> 
                Total Transactions: <%= pagination.total %> | 
                Page <%= pagination.page %> of <%= pagination.pages %>
            </div>
        </div>

        <!-- FOOTER -->
        <div class="footer">
            <p>
                <i class="bi bi-cpu"></i> Vending Machine Blockchain System |
                Blockchain Transaction Display (Demo Environment) |
                <%= currentYear %>
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>